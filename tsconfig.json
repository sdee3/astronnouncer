{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "outDir": "./build"
  },
  "ts-node": {
    "files": true
  },
  "include": ["*"],
  "exclude": ["node_modules"]
}
